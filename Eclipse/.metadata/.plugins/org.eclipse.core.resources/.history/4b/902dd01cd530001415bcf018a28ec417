#ifndef _graph_h
#define _graph_h

#include <vector>
#include <string>
#include <list>
#include <map>

using namespace std;

typedef int Index;
typedef unsigned UInt32;
typedef int Weight;
struct Node
{
	Index InternalNumber;
	string RealName;
	Weight weight;
};

struct Cell
{
	Node *CurrentNode;
	list<Node*> Children;
	UInt32 Indegree;
	UInt32 TopoNumber;
};

struct Graph
{
	vector<Cell*> Cells;
	UInt32 Size;
};

struct Table
{
	bool Known;
	int Distance;
	Node *ParentNode;
};


#define VertexNumber 8
#define NotAVertex (-1)
#define Infinity 0x8FFFFFFF

struct TableEntry
{
	bool Known;
	Weight Dist;
	Index Parent;
	bool operator > (TableEntry &tableEntry)
	{
		if(Dist > tableEntry.Dist)
			return true;
		else
			return false;
	}

	bool operator < (TableEntry &tableEntry)
	{
		if(Dist < tableEntry.Dist)
			return true;
		else
			return false;
	}

	bool operator <= (TableEntry &tableEntry)
	{
		if(Dist <= tableEntry.Dist)
			return true;
		else
			return false;
	}
	bool operator >= (TableEntry &tableEntry)
	{
		if(Dist >= tableEntry.Dist)
			return true;
		else
			return false;
	}
};

typedef struct TableEntry Table[VertexNumber];

#endif
